{% extends 'base.html.twig' %}

{% block title %}TonInstru - Instruments{% endblock %}

{% block body %}

    <h1 id="scroller" class="title">Instruments</h1>

    {% if instruments is defined %}
        <ul>
            {% for instrument in instruments %}
                <li> {{ instrument.name }} </li>
            {% endfor %}
        </ul>
    {% endif %}

    {{ form_start(form, {'attr': {"class": "form-instrument"}}) }}

    {{ form_label(form.name, "Nom", {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.name, {'attr': {'class': 'form-input'}}) }}
    <div class="form-error">{{ form_errors(form.name) }}</div>

    {{ form_label(form.category, "Categorie", {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.category, {'attr': {'class': 'form-input'}}) }}
    <div class="form-error">{{ form_errors(form.category) }}</div>

    {{ form_widget(form.add, { 'label': "Ajouter", 'attr': {'class': 'btn btn-add'} }) }}

    {{ form_end(form) }}

    <div class="space"></div>

{% endblock %}
